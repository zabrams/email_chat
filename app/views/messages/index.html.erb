<!-- HEADER CONTENT -->
<% content_for :header_left do %>
  <%= link_to "Log out", logout_path, method: :delete, class: 'btn pull-left' %>
<% end %>
<% content_for :header_title do %>
  Inbox
<% end %>

<% content_for :body do %>
  <h4>Conversations (<%= @thread_hash.count %>)</h4>
  <ul class="table-view">
      <% @thread_hash.each do |thread_id, email| %>
      <li class="table-view-cell media">
        <!-- passing email addresses here is causing issues %> -->
        <%= link_to message_path(:sender => thread_id), :class => "navigate-right" do %>
        <!-- <a class="navigate-right"> -->
          <span class="badge"><%= email.count %></span>
          <!-- Look at the email hash, take the first date + email pair, and pull our the get_details hash -->
          <% most_recent = email.first.last %>
          <p class="name-image media-object pull-left">
            <%= get_initials(most_recent[:from]) %>
          </p>
          <div class="media-body">
            <p><%= most_recent[:subject] %> | <%= get_name(most_recent[:from]) %> + <%= number_of_participants(most_recent) %> others</p>
            <!-- only show the subject and body of first email - probably want to change -->
            <p><%= most_recent[:snippet] %></p>
          </div>
        <!-- </a> -->
        <% end %>
      </li>
      <% end %>
  </ul>
<% end %>





