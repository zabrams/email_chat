<div class="name-image media-object pull-left">
  <% group_participants(most_recent) %>
  <% if @num > 1 && @num <= 3 %>
    <% @participants.each do |name| %>
      <% if unread %>
        <div class="mult">
      <% else %>
        <div class="mult plus">
      <% end %> 
        <p>
          <%= get_initials(name) %>
        </p>
      </div>
    <% end %>
  <% elsif @num > 3  %>
    <% @participants[0,3].each do |name| %>
      <% if unread %>
        <div class="mult">
      <% else %>
        <div class="mult plus">
      <% end %> 
        <p>
          <%= get_initials(name) %>
        </p>
      </div>
    <% end %>
    <div class="mult plus"> 
      <p>
        +<%= @num - 3 %>
      </p>
    </div>
  <% else %>
    <% if unread %>
        <div class="one">
      <% else %>
        <div class="one plus">
      <% end %> 
      <p>
        <%= get_initials(@participants.first) %>
      </p>
    </div>
  <% end %>
</div>
